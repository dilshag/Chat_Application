<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="585.0" prefWidth="468.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.controller.ServerController">
   <children>
      <VBox spacing="10" AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="10">
         <children>
            <ScrollPane fx:id="scrollPane" fitToWidth="true" style="-fx-background-color: #c358c9;" VBox.vgrow="ALWAYS">
               <content>
                  <VBox fx:id="messageVBox" spacing="10">
                     <padding>
                        <Insets bottom="10" left="10" right="10" top="10" />
                     </padding>
                  </VBox>
               </content>
            </ScrollPane>
            <HBox spacing="10">
               <children>
                  <TextField fx:id="txtMessage" onAction="#txtMessageOnAction" HBox.hgrow="ALWAYS" />
                  <Button fx:id="btnImage" onAction="#btnImageOnAction" text="Image" />
                  <Button fx:id="btnSend" onAction="#btnSendOnAction" style="-fx-background-color: #098207;" text="Send" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
